<VirtualHost *:80>
    ServerAdmin your_email@example.com
    DocumentRoot /var/www/html/portfolio
    <Directory /var/www/html/portfolio>
        Require all granted
        Options FollowSymLinks
        RewriteEngine On
        RewriteBase /
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteRule ^ index.html [L]
    </Directory>
</VirtualHost>
